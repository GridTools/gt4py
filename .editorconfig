# Global default settings (fallback for unspecified filetypes)
[*]
charset = utf-8
end_of_line = lf

# Data files
[*.{json, json5, toml, yaml, yml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false  # important to preserve trailing whitespace in string values
insert_final_newline = true

# Markdown files
[*.md]
trim_trailing_whitespace = false  # trailing whitespace may be meaningful (line breaks)
insert_final_newline = true
indent_style = space
indent_size = 2
